<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_standard_price']" position="attributes">
                <attribute
                    name="groups"
                >product_price_security.group_product_sale_price</attribute>
            </xpath>
        </field>
    </record>
    <record id="product_template_tree_view" model="ir.ui.view">
        <field name="name">Product Tree</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='list_price']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
    <record id="product_template_tree_view_price" model="ir.ui.view">
        <field name="name">product.tree</field>
        <field name="model">product.template</field>
        <field
            name="inherit_id"
            ref="product_price_security.product_template_tree_view"
        />
        <field
            name="groups_id"
            eval="[(6,0,[ref('product_price_security.group_product_sale_price')])]"
        />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='list_price']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
        </field>
    </record>
    <record id="product_product_tree_view" model="ir.ui.view">
        <field name="name">product.product.tree.view</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lst_price']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
    <record id="product_product_tree_view_price" model="ir.ui.view">
        <field name="name">product.product.tree.view.price</field>
        <field name="model">product.product</field>
        <field
            name="inherit_id"
            ref="product_price_security.product_product_tree_view"
        />
        <field
            name="groups_id"
            eval="[(6,0,[ref('product_price_security.group_product_sale_price')])]"
        />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lst_price']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
        </field>
    </record>



    <record id="product_template_kanban_view" model="ir.ui.view">
        <field name="name">Product Kanban</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_kanban_view" />
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_kanban_details']/ul" position="attributes">
                <attribute
                    name="groups"
                >product_price_security.group_product_sale_price</attribute>
            </xpath>
        </field>
    </record>
    <record id="product_kanban_view" model="ir.ui.view">
        <field name="name">Product Kanban</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_kanban_view" />
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_kanban_details']/ul" position="attributes">
                <attribute
                    name="groups"
                >product_price_security.group_product_sale_price</attribute>
            </xpath>
        </field>
    </record>
</odoo>
